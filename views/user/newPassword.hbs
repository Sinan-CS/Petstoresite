<link rel='stylesheet' href='/stylesheets/style.css' />
<script src="https://kit.fontawesome.com/a04c146c8c.js" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<section class="h-100 bg-image" style="background-color:">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-light text-danger" style="border-radius: 1rem;">
          <div class="card-body px-5 text-center">
            <div class="image-fluid">
              <a href="/">
                <img class=""
                  src=""
                  alt="">
              </a>
            </div>
            <div class="">
              <form action="/RPass" method="post">
                <h2 class="a-danger mb-2">Please enter your new password</h2>
                 <div class="form-outline">
                  <input type="password" name="password" id="password1" class="form-control form-control-lg"
                    placeholder="New Password" />
                </div>
                <p class="text-danger-50 mb-2">Confirm your new password</p>
                <div class="form-outline">
                  <input type="password" name="confirmPassword" id="password2" class="form-control form-control-lg"
                    placeholder="Confirm Password" />
                  <p style="color:red;">{{passErr}}</p>
                </div>
                <div style="margin-top: 7px;" id="CheckPasswordMatch"></div>
                <button class="btn btn-outline-dark btn-lg px-5 mt-2" type="submit">Reset</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function () {
    $("#password2").on('keyup', function () {
      var password = $("#password1").val();
      var confirmPassword = $("#password2").val();
      if (password != confirmPassword)
        $("#CheckPasswordMatch").html("Password does not match !").css("color", "yellow");
      else
        $("#CheckPasswordMatch").html("Password match !").css("color", "green");
    });
  });
</script>

