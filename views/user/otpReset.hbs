<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<section class="h-100 bg-image" style="background-color:">
  <div class="container py-2 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-light text-danger" style="border-radius: 1rem;">
          <div class="card-body text-center">
            <div class="image-fluid">
              <a href="/">
                <img class=""
                  src=""
                  alt="">
              </a>
            </div>
            <div class="mb-md-5 mt-md-4 px-2">
              <form action="/otpResetVerify" method="post">
                <h2 class="fw-bold mb-2 text-dark">Email OTP Verification for password reset</h2>
                <p class="text-dark-50 mb-2">Please enter your OTP!</p>
                <p style="color:rgb(255, 7, 7);">{{otpErr}}</p>
                <div class="form-outline">
                  <input type="otp" name="otpsignup" id="typePasswordX" class="form-control form-control-lg"
                    placeholder="OTP" />
                </div>
                <button class="btn btn-outline-dark btn-lg px-5 mt-2" type="submit">Confirm</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
